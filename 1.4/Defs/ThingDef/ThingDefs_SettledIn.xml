<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ArkTek FloorLight-->
  <ThingDef ParentName="BuildingBase">
    <defName>ArktechFloorPanel</defName>
    <label>Arktech Floor Panel</label>
    <description>Looks flashy and does absolutely nothing.</description>
    <thingClass>Building</thingClass>
    <drawerType>MapMeshOnly</drawerType>
    <graphicData>
      <texPath>ArktechFloorPanel/ArktechFloorPanel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.3,0,5.4,6)</rect>
      </damageData>
    </graphicData>
    <blockWind>false</blockWind>
    <blockLight>false</blockLight>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <altitudeLayer>Conduits</altitudeLayer>
    <passability>Standable</passability>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <fillPercent>1</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <Mass>50</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>0.0</Flammability>
      <Beauty>20</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(2,2)</size>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <constructionSkillPrerequisite>19</constructionSkillPrerequisite>
    <costList>
      <Steel>1</Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(90,90,90,0)</glowColor>
      </li>
    </comps>
    <building>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
  </ThingDef>
  <!-- Arktek Personal Access Point -->
  <ThingDef ParentName="FurnitureWithQualityBase" Class="DanielRenner.SettledIn.Building_ArktechPersonalAccessPointDef">
    <defName>ArktechPersonalAccessPoint</defName>
    <label>Arktech Personal Access Point (PAP)</label>
    <description>The greatest Human Machine Interface ever invented. From a distance, it projects the UI directly into your visual sensory brain cells. Up close, it connects you with all your sensoric abilities into the Arktech Virtual Interface - a complete world of your own making just limited by your imagination. Witness the future now, witness the Arktech PAP.</description>
    <thingClass>DanielRenner.SettledIn.Building_ArktechPersonalAccessPoint</thingClass>
    <drawerType>RealtimeOnly</drawerType>
    <graphicData>
      <texPath>Building_Arktech_PAP/Arktech_PAP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(5,5)</drawSize>
      <damageData>
        <rect>(0.3,0,5.4,6)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Building_Arktech_PAP/Arktech_PAP</uiIconPath>
    <uiIconScale>0.7</uiIconScale>
    <blockWind>false</blockWind>
    <blockLight>false</blockLight>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <!--<passability>Impassable</passability>-->
    <!--<pathCost>80</pathCost>-->
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <fillPercent>1</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <Mass>500</Mass>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>2400</WorkToBuild>
      <Flammability>0.0</Flammability>
      <Beauty>80</Beauty>
      <JoyGainFactor>0.8</JoyGainFactor>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(3,3)</size>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <clearBuildingArea>false</clearBuildingArea>
    <!--<designationHotKey>Misc6</designationHotKey>-->
    <!--<constructionSkillPrerequisite>0</constructionSkillPrerequisite>-->
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <!--<costList>
      <ComponentSpacer>10</ComponentSpacer>
    </costList>-->
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtFurniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Awful</minQualityForArtistic>
        <canBeEnjoyedAsArt>false</canBeEnjoyedAsArt>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(90,90,90,0)</glowColor>
      </li>
    </comps>
    <building>
      <joyKind>Meditative</joyKind>
      <ai_chillDestination>true</ai_chillDestination>
      <!--<soundAmbient>GeothermalPlant_Ambience</soundAmbient>-->
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>
  <!-- SettlementCenter -->
